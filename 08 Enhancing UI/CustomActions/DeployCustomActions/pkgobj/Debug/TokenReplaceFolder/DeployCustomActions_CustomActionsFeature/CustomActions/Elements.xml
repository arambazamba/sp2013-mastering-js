  <!--Site Actions-->
  <CustomAction Id="Integrations.CustomActions.SiteActions"
    Title="Persisting Values Demo"
    ImageUrl="/_layouts/images/actionssettings.gif"
    GroupId="SiteActions"
    Location="Microsoft.SharePoint.StandardMenu"
    Sequence="1001"
    Rights="DeleteListItems"
    Description="User SharePoint Notifications">
    <UrlAction Url="~site/_layouts/15/DeployCustomActions/CustomActionsTarget.aspx"/>
  </CustomAction>

  <CustomAction Id="Integrations.CustomActions.JavaScript"
    Title="Trigger JS based Action"
    ImageUrl="/_layouts/images/actionssettings.gif"
    GroupId="SiteActions"
    Location="Microsoft.SharePoint.StandardMenu"
    Sequence="1001"
    Rights="DeleteListItems"
    Description="Triggers some custom JavaScript">
    <UrlAction Url="javascript:void(console.log('Actions triggerd from JavaScript'));"/>
  </CustomAction>

  <CustomAction Id="Integrations.CustomActions.JavaScriptExternal"
  Title="Trigger JS based external Action"
  ImageUrl="/_layouts/images/actionssettings.gif"
  GroupId="SiteActions"
  Location="Microsoft.SharePoint.StandardMenu"
  Sequence="1002"
  Rights="DeleteListItems"
  Description="Triggers some external JavaScript"
  ScriptSrc="~site/_layouts/15/DeployCustomActions/customaction.js">
    <UrlAction Url="javascript:triggerFromCustomAction();"/>
  </CustomAction>

  <!--Edit Control Block akn Document Menu-->
  <CustomAction Id="Integrations.CopyTo"
		RegistrationType="List"
		RegistrationId="101"
		Location="EditControlBlock"
		Sequence="300"
		Title="Copy To Destination">
    <UrlAction Url="~site/_layouts/15/DeployCustomActions/CustomActionsTarget.aspx?ItemId={ItemId}&amp;ListId={ListId}"/>
  </CustomAction>
  
  <!--Site Settings-->
  <CustomActionGroup
   Id="Integrations.CustomActions.SiteSettingsGroup"
   Location="Microsoft.SharePoint.SiteSettings"
   Title="Document Library Extensions"
   Sequence="100"
   ImageUrl="/_layouts/images/demo.png"
   Description="Settings for Document Library Extensions"/>
  <CustomAction
		Id="Integrations.CustomActions.SiteSettings"
		GroupId="Integrations.CustomActions.SiteSettingsGroup"
		Location="Microsoft.SharePoint.SiteSettings"
		Sequence="10"
		Title="Enable Creator-Owner-Permissions" >
    <UrlAction Url="~site/_layouts/15/DeployCustomActions/CustomActionsTarget.aspx" />
  </CustomAction>
  
  <!--List Settings-->
  <CustomAction
		Id="Integrations.CustomActions"
		GroupId="GeneralSettings"
		Location="Microsoft.SharePoint.ListEdit"
		Sequence="10"
		Title="Allowed File Types" >
    <UrlAction Url="~site/_layouts/15/DeployCustomActions/CustomActionsTarget.aspx?ListId={ListId}" />
  </CustomAction>
</Elements>
